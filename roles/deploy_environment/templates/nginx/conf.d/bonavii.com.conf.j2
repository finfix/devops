server {

    listen       443 ssl http2;
    server_name  bonavii.com;

    ssl_certificate      /etc/ssl/fullchain.pem;
    ssl_certificate_key  /etc/ssl/privkey.pem;

    location / {
      root /static/;
    }
}

server {

    listen       80;
    server_name  bonavii.com;

    if ($host = bonavii.com) {
        return 301 https://$host$request_uri;
    }

    return 404;
}